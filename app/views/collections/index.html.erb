<% provide(:title, 'Collections') %>
<% provide(:body_id, 'collections_index') %>

<h1>Collections</h1>

<p>Showing <%= @start + 1 %>&ndash;<%= @start + @num_results_shown %> of
  <%= @collections.total_length %> collections</p>

<ul>
  <% @collections.each do |collection| %>
    <li class="clearfix">
      <%= link_to collection do %>
        <%= image_tag('', width: 100, height: 100) %>
      <% end %>
      <span class="title"><%= link_to collection.title, collection %></span>
      <br>
      <span class="description">
        <%= truncate(collection.triple('http://purl.org/dc/elements/1.1/description'), length: 400) %>
      </span>
    </li>
  <% end %>
</ul>

<%= paginate(@collections, @limit, @current_page) %>
