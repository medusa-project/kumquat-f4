<%= form_for [:admin, theme] do |f| %>

  <% render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <%= f.submit(context == :new ? 'Create Theme' : 'Edit Theme',
               class: 'btn btn-primary') %>

<% end %>
