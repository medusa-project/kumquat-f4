<% provide :title, 'New Collection' %>
<% provide :body_id, 'collections_new' %>
<% provide :active_nav, 'collections' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_root_path %></li>
  <li><%= link_to 'Collections', admin_collections_path %></li>
  <li class="active">New Collection</li>
</ol>

<h1>New Collection</h1>

<%= form_for [:admin, @collection], method: :post do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control'  %>
  </div>
  <div class="form-group">
    <%= f.label :key %>
    <%= f.text_field :key, class: 'form-control', maxlength: f.object.class.max_length(:key)  %>
  </div>
  <%= f.submit 'Create', class: 'btn btn-primary' %>
<% end %>
