<% provide :body_id, 'landing' %>
<% provide :title, 'Home' %>

<h1><%= Option.string(Option::Key::WEBSITE_NAME) %></h1>

<div class="row">
  <div class="col-sm-7">
    <h2>About the collections</h2>

    <%= sanitize(Option.string(Option::Key::WEBSITE_INTRO_TEXT).gsub("\n", '<br>'),
                 tags: %w(p br), attributes: %w()) %>

    <div class="text-center">
      <%= link_to 'Browse Collections', repository_collections_path,
                  class: 'btn btn-default btn-lg' %>
      <%= link_to 'Browse Items', repository_items_path,
                  class: 'btn btn-default btn-lg' %>
    </div>
  </div>
  <div class="col-sm-5">
    <% if @random_item %>
      <div class="text-center">
        <%= thumbnail_tag(@random_item, 512) %>
        <%= link_to @random_item.title, @random_item %>
        <br>
        <%= link_to @random_item.collection.title, @random_item.collection %>
      </div>
    <% end %>
  </div>
</div>
