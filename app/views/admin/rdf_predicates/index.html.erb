<% provide :title, 'RDF Predicates' %>
<% provide :body_id, 'rdf_predicates' %>
<% provide :active_nav, 'entities' %>

<ol class="breadcrumb">
  <li><%= link_to 'Home', admin_root_path %></li>
  <li class="active">RDF Predicates</li>
</ol>

<h1>RDF Predicates</h1>

<div class="alert alert-info">
  <ul>
    <li>Predicate labels will appear in place of their corresponding URI in
      public views.</li>
    <li>Labels can be overridden on a per-collection basis.</li>
    <li>Predicates that do not appear in this list can be used in item
      descriptions, but will appear as prefixed URI last path components (if
      a prefix is known) or full URIs in public views.</li>
  </ul>
</div>

<%= form_tag do %>
  <table class="table table-striped kq-predicates">
    <thead>
      <th>Predicate URI</th>
      <th>Label</th>
      <th></th>
    </thead>
    <tbody>
      <% @predicates.each do |predicate| %>
        <tr>
          <td>
            <%= hidden_field_tag "predicates[#{predicate.id}][_destroy]", 0,
                                 class: 'kq-destroy-marker' %>
            <%= text_field_tag "predicates[#{predicate.id}][uri]",
                               predicate.uri, class: 'form-control' %>
          </td>
          <td><%= text_field_tag "predicates[#{predicate.id}][label]",
                                 predicate.label, class: 'form-control' %></td>
          <td><button type="button"
                      class="btn btn-sm btn-danger kq-remove-predicate">&minus;</button></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="clearfix">
    <div class="pull-right">
      <button type="button"
              class="btn btn-default btn-success kq-add-predicate">Add Predicate</button>
    </div>
  </div>
  <br>
  <%= submit_tag('Save Changes', class: 'btn btn-primary') %>
<% end %>
