<% provide :body_id, 'search' %>
<% provide :active_nav, 'search' %>
<% provide :title, 'Advanced Search' %>

<h1>Advanced Search</h1>

<%= form_tag do %>

  <div class="well kq-field-search">
    <div class="form-group form-inline">
      <%= select_tag 'fields[]', options_for_select(@predicates_for_select),
                     class: 'form-control' %>
      <%= text_field_tag 'terms[]', '', class: 'form-control' %>
      <button type="button" class="btn btn-xs btn-danger kq-remove-field">&minus;</button>
    </div>
    <button type="button" class="btn btn-xs btn-success kq-add-field">&plus; Add Field</button>
  </div>

  <%= submit_tag 'Search', class: 'btn btn-primary' %>

<% end %>
